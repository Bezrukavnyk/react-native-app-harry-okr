{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["import", "react"],
  "rules": {
    "import/order": ["error", { "alphabetize": { "order": "asc" } }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
